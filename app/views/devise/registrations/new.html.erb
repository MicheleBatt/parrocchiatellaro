
<div class="body-container">
  <div id="container">

    <div class="mt-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <h2 class="mt-5"><%= "REGISTRAZIONE" %></h2>
        <br>
        <div class="form-group row justify-content-center">
          <%= f.label :username, "Username", class: 'required col-sm-2 col-form-label' %>
          <%= f.text_field :username, autofocus: true, class: 'input-field col-sm-3 col-md-5 col-lg-3 settings__input-box--style' %>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.label :email, "Email", class: 'required col-sm-2 col-form-label' %>
          <%= f.text_field :email, id: 'registration_form_email', class: 'input-field col-sm-3 col-md-5 col-lg-3 settings__input-box--style' %>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.label :password, "Password", class: 'required col-sm-2 col-form-label' %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'input-field col-sm-3 col-md-5 col-lg-3 settings__input-box--style' %>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.label :password_confirmation, "Conferma Password", class: 'required col-sm-2 col-form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-field col-sm-3 col-md-5 col-lg-3 settings__input-box--style' %>
        </div>

        <div class="mt-10px">&nbsp;</div>

        <%= f.submit "Registrati", id: 'signup', class: 'button-sign' %>

        <br><br>

        <%= render 'devise/shared/links' %>
      <% end %>
    </div>

  </div>
</div>
