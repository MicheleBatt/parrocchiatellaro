<div class="body-container">
  <div id="container">
    <div class="mt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2 class="mt-5">LOG IN</h2>
        <br>
        <div class="form-group row justify-content-center">
          <%= f.label :email, "Email", class: "col-sm-2 col-form-label" %>
          <%= f.email_field :email, id: 'login_email', autofocus: true, class: 'input-field col-sm-3 col-md-5 col-lg-3 settings__input-box--style' %>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.label :password, "Password", class: 'col-sm-2 col-form-label' %>
          <%= f.password_field :password, id: 'login_password', class: 'input-field col-sm-3 col-md-5 col-lg-3 settings__input-box--style' %>
        </div>

        <div class="mt-20px">&nbsp;</div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <div class="form-check-inline">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, "Ricordami su questo dispositivo", class: 'form-check-label' %>
            </div>
          </div>
        <% end %>

        <%= f.submit "Log In", class: 'btn-login button-sign'  %>
      <% end %>
    </div>
  </div>
</div>
