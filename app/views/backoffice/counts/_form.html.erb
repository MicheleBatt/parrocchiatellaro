<%= form_with(model: [:backoffice, @count], local: true, class: 'form-horizontal') do |f| %>
  <%= render 'layouts/error_messages', obj: f.object %>

  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-5">
      <%= f.label :nome, style: "display: block" %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-5">
      <%= f.label :descrizione, style: "display: block" %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-5">
      <%= f.label :iban, style: "display: block" %>
      <%= f.text_field :iban, class: 'form-control' %>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mb-5">
      <%= f.label :ammontare_iniziale, style: "display: block" %>
      <%= f.number_field :initial_amount, value: number_to_currency(f.object.initial_amount.to_f, delimiter: '', unit: ''), step: :any, class: 'form-control' %>
    </div>
  </div>


  <div class="hr-line-dashed"></div>

  <div class="form-group">
    <div class="text-center">
      <%= f.button :submit, class: 'btn btn-success btn-lg' do %>
        <i aria-hidden="true" class="fas fa-save"></i> Salva
      <% end %>
    </div>
  </div>
<% end %>
